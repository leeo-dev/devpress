<%- include("partials/headerclient") %>
  <div class="container">
    <% result.articles.rows.forEach(article=> { %>
      <div class="card mb-3">
        <div class="card-header">
          <h4>
            <%= article.title %>
          </h4>
        </div>
        <div class="card-body">
          <a href="/<%= article.slug%>" class="btn btn-primary">Ler mais</a>
        </div>
      </div>
      <% }); %>



        <div class="row">
          <div class="col">

            <% if(result.page> 2){%>
              <a href="/articles/page/<%= (result.page - 1)%>">
                << Prev</a>
                  <%} else if(result.page==2){%>
                    <a href="/">
                      << Prev</a>
                        <%}%>

                          <% if(result.next){ %>
                            <a style="float: right;" href="/articles/page/<%= result.page + 1%>">Next >></a>
                            <% } %>
          </div>
          <hr>
          <hr>
          <hr>
        </div>

  </div>
  <%- include("partials/footer") %>